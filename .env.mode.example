// 1. API Mode (Easiest - No Python needed)
NODE_ENV=development
PORT=3000
OCR_MODE=api
DEEPSEEK_API_KEY=sk-your-actual-api-key-here
DEEPSEEK_API_URL=https://api.deepseek.com/ocr
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
TEMP_DIR=./temp

// 2. Local Mode with System Python
NODE_ENV=development
PORT=3000
OCR_MODE=local
PYTHON_PATH=python3
DEEPSEEK_MODEL_PATH=deepseek-ai/DeepSeek-OCR
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
TEMP_DIR=./temp


// 3. Local Mode with Virtual Environment
NODE_ENV=development
PORT=3000
OCR_MODE=local
PYTHON_PATH=./venv/bin/python
DEEPSEEK_MODEL_PATH=deepseek-ai/DeepSeek-OCR
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
TEMP_DIR=./temp


// 4. Production Mode
NODE_ENV=production
PORT=8080
OCR_MODE=api
DEEPSEEK_API_KEY=sk-your-production-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/ocr
MAX_FILE_SIZE_MB=20
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
TEMP_DIR=/var/tmp/deepseek-ocr